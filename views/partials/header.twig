<header data-menu="wrapper"
  class="menu relative z-50 {{ darkHeader ? ' is-dark' : '' }}">
  <div class="menu__bar relative z-10">
    <div class="container py-3">
      <div class="row items-center">
        <div class="col col--auto">
          {% set paddingBottom = (500 / 2000 * 100)|round(4) %}
          <a href="{{ site.url }}"
            aria-label="{{ site.name }} - logo"
            class="block max-w-full relative"
            style="width: 100px; padding-bottom: {{ paddingBottom }}%">
            {% include 'components/logo.twig' %}
          </a>
        </div>
        <div class="col col--grow flex justify-end">
          <button data-menu="toggle"
            aria-label="Menu toggle (closed)"
            class="menu__toggle">
            <div class="menu__icon">
              <span></span>
              <span></span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
  <span data-menu="overlay"
    class="menu__overlay hidden"
    aria-label="Menu Overlay"
    aria-hidden="true">

  </span>
  <div data-menu="drawer"
    class="menu__drawer hidden"
    aria-label="Menu Drawer"
    aria-hidden="true">
    <div data-menu="content" class="menu__content container py-24">
      <div class="row mb-6">
        <div class="col col--12 md:col--6 mb-8 md:mb-0">
          <ul>
            <li class="h2 font-normal mb-6">Diensten</li>
            <li class="h2 font-normal mb-6">Projecten</li>
            <li class="h2 font-normal mb-6">Over ons</li>
            <li class="h2 font-normal">Vacatures</li>
          </ul>
        </div>
        <div class="col col--12 md:col--6">
          <div class="row mb-8">
            <div class="col col--grow">
              <small class="block mb-4 font-semibold text-gray-600 smallest">Studio</small>
              <small class="block">Oliver Noortlaan 108</small>
              <small class="block">3011VC Vlaardingen</small>
              <small class="block">Nederland</small>
            </div>
          </div>
          <button class="button bg-white text-black flex items-center font-semibold">
            <small>Contact</small>
            <svg viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="ml-2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
